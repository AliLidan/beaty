<Page x:Class="WpfBeauty.Pages.ModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBeauty.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      FontFamily="Tahoma"
      Title="ModePage">
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Grid Height="100" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TbCode" Grid.Column="0" Grid.Row="0"  Height="25"/>

                <Button x:Name="BtnConfirm" Grid.Column="0" Grid.Row="1" Height="25" Width="100" Margin="10,0,10,0" Content="Войти" Click="BtnConfirm_Click" Background="#ff4a6d"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
